<?xml version="1.0" encoding="UTF-8" ?>
    <prefix>
      <prefix>lti</prefix>
      <describeURL>/direct/lti/describe</describeURL>
      <summary>Allows access to the various data structures available from the LTIService support LTI 1.x and LTI 2.x work.  Collection endpoints allow the use of first= last= and order= parameters.</summary>
      <customActions>
        <customAction>
          <action>contents</action>
          <url>/direct/lti/:ID:/contents</url>
          <method>GET</method>
          <viewKey>show</viewKey>
          <description>Retrieve the content items for a siteId. eg /lti/{siteId}/contents[.format][?first=0&last=10&order=title]</description>
        </customAction>
      </customActions>
      <customActions>
        <customAction>
          <action>tools</action>
          <url>/direct/lti/:ID:/tools</url>
          <method>GET</method>
          <viewKey>show</viewKey>
          <description>Retrieve the tools for a siteId. eg /lti/{siteId}/tools[.format][?first=0&last=10&order=title]</description>
        </customAction>
      </customActions>
      <customActions>
        <customAction>
          <action>content</action>
          <url>/direct/lti/content</url>
          <method/>
          <viewKey/>
          <description>Retrieve a content item from a siteId. eg /lti/content/{siteId}/{contentId}[.format]</description>
        </customAction>
      </customActions>
      <customActions>
        <customAction>
          <action>tool</action>
          <url>/direct/lti/tool</url>
          <method/>
          <viewKey/>
          <description>Retrieve a tool from a siteId. eg /lti/tool/{siteId}/{toolId}/tool[.format]</description>
        </customAction>
      </customActions>
      <outputFormats>
        <format>txt</format>
        <format>json</format>
        <format>html</format>
       </outputFormats>
      <inputFormats>
       </inputFormats>
      <capabilities>
        <capability>
          <name>EntityProvider</name>
          <type>org.sakaiproject.entitybroker.entityprovider.EntityProvider</type>
        </capability>
        <capability>
          <name>ActionsExecutable</name>
          <type>org.sakaiproject.entitybroker.entityprovider.capabilities.ActionsExecutable</type>
        </capability>
        <capability>
          <name>AutoRegisterEntityProvider</name>
          <type>org.sakaiproject.entitybroker.entityprovider.capabilities.AutoRegisterEntityProvider</type>
        </capability>
        <capability>
          <name>Describeable</name>
          <type>org.sakaiproject.entitybroker.entityprovider.capabilities.Describeable</type>
        </capability>
        <capability>
          <name>Outputable</name>
          <type>org.sakaiproject.entitybroker.entityprovider.capabilities.Outputable</type>
        </capability>
      </capabilities>
    </prefix>
